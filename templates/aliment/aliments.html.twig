{% extends 'base.html.twig' %}

{% block title %} Recettes  {% endblock %}
{% block monTitre %}
Liste de tous les aliments
    {% if isCalorie %}
        avec de moins de 50 Calories au 100g 
    {% elseif isGlucide %}
        avec moins de 5 Glucides au 100g
    {% endif %}
{% endblock %}
{% block body %}
    <h1>Liste des Aliments: </h1>
    <div class="m-1">
        <a class="btn btn-primary" href="{{ path('aliments')}}">Tous</a>
        <a class="btn btn-primary" href="{{ path('alimentParCalorie', {'calorie': 50}) }}">Aliments moins de 50 Calories au 100g</a>
        <a class="btn btn-primary" href="{{ path('alimentParGlucide', {'glucide': 5}) }}">Aliments moins de 5 Glucides au 100g</a>
    </div>
    <div class="row">
        {% for aliment in aliments %}
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card border-primary mb-3 mx-auto" style="max-width: 20rem;">
                    <div class="card-header text-center"><img src="{{asset('images/aliments/' ~ aliment.image)}}" class="card-img-top perso_imgAliment" alt="">{{aliment.nom}}</div>
                    <div class="card-body">
                        <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{ aliment.nom }}</h3>
                        <p class="card-text">
                            <h4 class="text-center">Prix (Kilo): {{ aliment.prix }}€</h4>
                            <h4 class="text-center">Type: {{ aliment.type.libelle }}</h4>
                            <table class="table text-center">
                                <tr class="table-primary">
                                    <td>Propriété</td>
                                    <td>Valeur (100g)</td>
                                </tr>
                                <tr>
                                    <td>Calories</td>
                                    <td>{{ aliment.calorie }}</td>
                                </tr>
                                <tr>
                                    <td>Protéines</td>
                                    <td>{{aliment.proteine}}</td>
                                </tr>
                                <tr>
                                    <td>Glucides</td>
                                    <td>{{aliment.glucide}}</td>
                                </tr>
                                <tr>
                                    <td>Lipides</td>
                                    <td>{{aliment.lipide}}</td>
                                </tr>
                            </table>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
